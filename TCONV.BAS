  270 REM ****** SUBROUTINES ******
  280 REM SUBROUTINE CONVERTING FROM CELSIUS TO FAHRENHEIT
  290 PRINT
  300 INPUT "TEMPERATURE IN CELSIUS DEGREES ";C
  310 LET F = (9/5)*C + 32
  320 IF C < -273.15 THEN PRINT C;": ILLEGAL INPUT":GOTO 300
  330 PRINT C;" C DEG = ";INT(F+.5);" F DEG"
  340 RETURN
  350 REM *** SUBROUTINE CHECKING USER REQUEST TO CONTINUE ***
  360 PRINT
  370 PRINT "DO YOU WANT DO ANOTHER CONVERSION"
  380 INPUT "(YES/NO)";A$
  390 IF LEFT$(A$,1) = "Y" OR LEFT$(A$,1) = "y" THEN 130
  400 IF LEFT$(A$,1) = "N" OR LEFT$(A$,1) = "n" THEN 420
  410 PRINT "PLEASE TYPE YES OR NO": GOTO 360
  420 PRINT "GOODBYE, ";N$;"."
  430 INPUT "PRESS ENTER TO END";Z
  440 RETURN
  450 REM *** SUBROUTINE FOR FAHRENHEIT TO CELSIUS CONVERSION ***
  460 PRINT
  470 INPUT "TEMPERATURE IN FAHRENHEIT DEGREES";F
  480 LET C = (F - 32)*5/9
  490 IF F < -459.67 THEN PRINT F;": ILLEGAL INPUT":GOTO 470
  500 PRINT F;" F DEG = ";INT(C+.5);" C DEG"
  510 RETURN
