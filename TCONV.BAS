1000 REM *** CELSIUS TO FAHRENHEIT CONVERSION PROGRAM     ***
1020 REM *** VALUES WITH DEGREE FRACTIONS ARE APROXIMATED ***
1030 REM *** THE CLOSER INTEGER ***
1040 REM GO TO THE SPLASH SCREEN INTRODUCTION SUBROUTINE
1070 GOSUB 1655
1080 PRINT:PRINT "VALUES WITH DEGREE FRACTIONS ARE APROXIMATED "
1090 PRINT "TO THE CLOSER INTEGER NUMBER"
1100 REM MAIN USER INTERFACE LOOP
1120    PRINT:PRINT "DO YOU WANT TO CONVERT"
1140    PRINT "FROM FARHENEIT TO CELSIUS (F), OR"
1160    PRINT "FROM CELSIUS TO FAHRENHEIT (C)" 
1170    INPUT "F OR C";W$ 
1180    IF W$ = "F" OR W$ = "f" THEN GOSUB 1440
1190    IF W$ = "C" OR W$ = "c" THEN GOSUB 1240
1200    IF W$ <> "F" AND W$ <> "f" AND W$ <> "C" AND W$ <> "c" THEN 1170
1204    REM GO TO ASK TO THE USER IF WANT TO CONTINUE
1208        GOSUB 1300
1210    END
1215    REM CLOSE INFINITE UI LOOP
1220 GOTO 1120
1225 REM ****** SUBROUTINES ******
1230 REM SUBROUTINE CONVERTING FROM CELSIUS TO FAHRENHEIT
1240    PRINT:INPUT "TEMPERATURE IN CELSIUS DEGREES ";C
1260    LET F = (9/5)*C + 32
1280    PRINT C;" CELSIUS DEGREES = ";INT(F+.5);" FAHRENHEIT DEGREES"
1290 RETURN
1295 REM *** SUBROUTINE CHECKING USER REQUEST TO CONTINUE ***
1300    PRINT:INPUT "DO YOU WANT DO ANOTHER CONVERSION (YES/NO)";A$
1320    IF A$ = "YES" OR A$ = "yes" OR A$ = "Yes" THEN 1120
1340    IF A$ = "NO" OR A$ = "no" OR A$ = "No" THEN 1380
1360    PRINT "PLEASE TYPE YES OR NO": GOTO 1300
1380    PRINT "GOODBYE."
1400    INPUT "PRESS ENTER TO END";Z
1420 RETURN
1440 REM *** SUBROUTINE FOR FAHRENHEIT TO CELSIUS CONVERSION ***
1560    PRINT:INPUT "TEMPERATURE IN FAHRENHEIT DEGREES";F
1580    LET C = (F - 32)*5/9
1600    PRINT F;" FAHRENHEIT DEGREES = ";INT(C+.5);" CELSIUS DEGREES"
1620 RETURN
1650 REM SPLASH SCREEN SUBROUTINE
1655    CLS
1660    PRINT "******************************************"
1680    PRINT "*** PROGRAM TO CONVERT TEMPERATURE     ***"
1700    PRINT "*** FROM FAHRENHEIT TO CELSIUS DEGREES ***"
